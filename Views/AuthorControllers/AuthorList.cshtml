@model AuthorViewModel
@{
    ViewData["Title"] = "";
}

<div class="container">
    <div class="row align-items-center" >

        <div class="col-6 align-items-center">
            <div class="py-1">
                <h2 class="py-2">Create a New Author!</h2>
                <p>Authors play a crucial role in bringing stories, knowledge, and new worlds to life. By adding a new author to the system, you're helping to build a community of creative minds that shape the future of literature. This page allows you to contribute to that journey by registering an author, giving their work a place to grow and be recognized.</p>
            </div>

            <form asp-action="AuthorList" method="post">
                <div class="mb-1 mt-3 col-5">
                    <label asp-for="AuthorName" class="form-label">Author Name</label>
                    <input asp-for="AuthorName" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    <span asp-validation-for="AuthorName" class="text-danger"> </span>
                </div>

                <div class="mb-1 mt-3 col-5">
                    <label asp-for="AuthorLastName" class="form-label">Author Last Name</label>
                    <input asp-for="AuthorLastName" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    <span asp-validation-for="AuthorLastName" class="text-danger"> </span>
                </div>

                <div class="mb-3 col-5">
                    <label asp-for="DateOfBirth" class="form-label">Author Date of Birth</label>
                    <input asp-for="DateOfBirth" type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                    <span asp-validation-for="DateOfBirth" class="text-danger"> </span>
                </div>

                <div class="col py-2">
                    <button type="submit" class="btn btn-outline-secondary radius col-4">Add</button>
                    <a asp-controller="AuthorControllers" asp-action="AuthorIndex" type="button" class="btn btn-outline-secondary radius ms-2 col-4">Cancel</a>
                </div>
            </form>
        </div>
       

            <div class="col-6 justify-content-center d-flex">
                <image class="h-75 w-75" src="../photo8.jpg">

                </image>
         

        </div>
    </div>
</div>